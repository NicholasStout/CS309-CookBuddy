<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.primaryfolder.cookbuddy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Add permission to use the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CookbuddyTheme">

        <!-- The user registration activity -->
        <activity
            android:name=".activities.RegisterUser"
            android:label="@string/app_name"
            android:theme="@style/CookbuddyTheme" />

        <!-- The existing user sign in activity -->
        <activity android:name=".activities.SignInActivity" />


        <activity android:name=".activities.AddRecipe" />


        <activity android:name=".activities.ViewRecipes" />


        <activity android:name=".activities.UserProfile" />


        <activity
            android:name=".activities.MainActivity"
            android:label="MainActivity"
            android:theme="@style/CookbuddyTheme" >

            <!-- Makes this the default activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".activities.MessagingActivity" />


    </application>

</manifest>